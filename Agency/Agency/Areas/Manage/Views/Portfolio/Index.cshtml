@using Agency.Models
@model List<Portfolio>
@{
    int count = 0;
}




<div class="container">
    <h1><a class="btn btn-primary" asp-action="Create">Create</a></h1>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">FullName</th>
                <th scope="col">Position</th>
                <th scope="col">Img</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <th scope="row">@count</th>
                    <td>@item.FullName</td>
                    <td>@item.Position</td>
                    <td><img src="~/Upload/@item.ImgUrl"></img></td>

                </tr>

            }


        </tbody>
    </table>
</div>
